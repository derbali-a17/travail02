<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Numero3Activity">

    <EditText
        android:id="@+id/contact_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="62dp" />

    <EditText
        android:id="@+id/contact_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Subject"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/contact_email"
        app:layout_constraintStart_toStartOf="@+id/contact_email"
        app:layout_constraintTop_toBottomOf="@+id/contact_email" />

    <EditText
        android:id="@+id/contact_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Message"
        android:inputType="textMultiLine"
        android:lines="5"
        app:layout_constraintEnd_toEndOf="@+id/contact_subject"
        app:layout_constraintStart_toStartOf="@+id/contact_subject"
        app:layout_constraintTop_toBottomOf="@+id/contact_subject" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="clickSend"
        android:text="Send"
        app:layout_constraintEnd_toEndOf="@+id/contact_message"
        app:layout_constraintStart_toStartOf="@+id/contact_message"
        app:layout_constraintTop_toBottomOf="@+id/contact_message" />

    <TextView
        android:id="@+id/contact_result"
        android:layout_width="208dp"
        android:layout_height="133dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/pink"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button3" />
</androidx.constraintlayout.widget.ConstraintLayout>