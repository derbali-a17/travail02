<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Numero4Activity">

    <EditText
        android:id="@+id/calculator_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Bill amount $"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/calculator_tip_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Tip %"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/calculator_amount"
        app:layout_constraintStart_toStartOf="@+id/calculator_amount"
        app:layout_constraintTop_toBottomOf="@+id/calculator_amount" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:onClick="clickCalculate"
        android:text="Calculate"
        app:layout_constraintEnd_toEndOf="@+id/calculator_tip_percent"
        app:layout_constraintStart_toStartOf="@+id/calculator_tip_percent"
        app:layout_constraintTop_toBottomOf="@+id/calculator_tip_percent" />
</androidx.constraintlayout.widget.ConstraintLayout>